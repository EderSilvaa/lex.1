{
  "name": "lex-extension",
  "version": "1.0.0",
  "description": "Assistente jur√≠dico inteligente para o sistema PJe",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "tsc && npm run minify",
    "minify": "terser dist/js/*.js -o dist/js/bundle.min.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "serve": "http-server . -p 8080",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "rimraf": "^5.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["chrome-extension", "typescript", "pdf", "ai", "legal"],
  "author": "LEX Team",
  "license": "MIT"
}